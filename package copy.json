{
  "name": "api-template",
  "version": "1.0.0",
  "description": "Nodejs api template using typescript, express, redis, elastic stack, rabbitmq",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/infra/server/express/index.ts",
    "compile": "npx swc ./src -d dist --ignore **/*.yml",
    "start": "node ./dist/infra/server/express/index.js",
    "lint": "npx eslint",
    "lint:fix": "npx eslint --fix",
    "test": "npx jest --passWithNoTests",
    "test:watch": "npx jest --watch",
    "test:coverage": "npx jest --coverage",
    "husky:prepare": "npx husky install",
    "husky:pre-commit": "yarn pipeline:commit",
    "husky:commit-msg": "npx --no -- commitlint --edit ${1}",
    "prisma:generate": "npx prisma generate",
    "prisma:reset": "npx prisma migrate reset",
    "prisma:dev": "npx prisma migrate dev",
    "prisma:build": "npx prisma migrate build",
    "pipeline:commit": "yarn && yarn lint && yarn test && yarn compile",
    "pipeline:test": "yarn && yarn lint && yarn test && yarn compile && yarn start",
    "build-pipeline": "yarn && yarn compile"
  },
  "author": "Alessandro Traversi",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.77",
    "@swc/jest": "^0.2.29",
    "@types/compression": "^1.7.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.5.0",
    "@types/redis": "^4.0.11",
    "@types/uuid": "^9.0.2",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^37.0.0",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "prettier": "^3.0.2",
    "prisma": "^5.1.1",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dayjs": "^1.11.9",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "rate-limiter-flexible": "^3.0.0",
    "redis": "^4.6.7",
    "reflect-metadata": "^0.1.13",
    "uuid": "^9.0.0",
    "winston": "^3.10.0"
  }
}
